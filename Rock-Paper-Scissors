
/* 
----------------------------
    Rock crushes Scissors.
    Scissors cuts Paper.
    Paper covers Rock.
    Rock crushes Lizard.
    Lizard poisons Spock.
    Spock smashes Scissors.
    Scissors decapitate Lizard.
    Lizard eats Paper.
    Paper disproves Spock.
    Spock vaporizes Rock.
----------------------------
*/ 

// CODE ------------------------------------
#include <iostream> 
#include <stdlib.h>

int main() {

srand (time(NULL));

// Computer (randomized) VS User choice:
int computer_choice = rand() % 3 + 1;
int user_choice = 0;

std::cout << rand;

std::cout << "====================\n";
std::cout << "rock paper scissors!\n";
std::cout << "====================\n";

std::cout << "1) ✊\n";
std::cout << "2) ✋\n";
std::cout << "3) ✌️\n";
std::cout << "shoot! ";


// User choice (1-3):
std::cout << "Choose 1, 2 or 3!\n";
std::cin >> user_choice; 

std::cout << computer_choice << " <-- Computer" << "\n";

// Game Logic: 

if (user_choice == 1 && computer_choice == 1) {
    std::cout << "Tie!\n";
}

if (user_choice == 1 && computer_choice == 2) {
    std::cout << "Computer wins!\n";
}

if (user_choice == 1 && computer_choice == 3) {
    std::cout << "User wins!\n";
}

if (user_choice == 2 && computer_choice == 1) {
    std::cout << "User wins!\n";
}

if (user_choice == 2 && computer_choice == 2) {
    std::cout << "Tie!\n";
}

if (user_choice == 2 && computer_choice == 3) {
    std::cout << "Computer wins!\n";
}

if (user_choice == 3 && computer_choice == 3) {
    std::cout << "Tie!\n";
}

if (user_choice == 3 && computer_choice == 1) {
    std::cout << "Computer wins!\n";
}

if (user_choice == 3 && computer_choice == 2) {
    std::cout << "Computer wins!\n";
}

if (user_choice == 3 && computer_choice == 3) {
    std::cout << "Tie!\n"; 
}

}
